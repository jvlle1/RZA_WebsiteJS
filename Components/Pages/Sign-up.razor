@using RZA_WebsiteJS.Services
@using RZA_WebsiteJS.Models
@inject CustomerService CustomerService

<link rel="stylesheet" href="css/styles.css" />

@page "/Sign-up"

<div class="sign-container">
    <div class="sign-card">
        <div class="image-side">
            <img src="/images/log-in image.jpg" id="mem" height="340" width="300" />
        </div>

        <div class="form-side">

            <h2>Sign-Up</h2>

            <div class="names">
                <div class="input-box">
                    <input @bind="newCustomer.FirstName" type="text" class="input-field" placeholder="First Name" autocomplete="off" required />
                </div>

                <div class="input-box">
                    <input @bind="newCustomer.LastName" type="text" class="input-field" placeholder="Last Name" autocomplete="off" required />
                </div>

            </div>
            

            <div class="input-box">
                <input @bind="newCustomer.Email" type="text" class="input-field" placeholder="Email" autocomplete="off" required />
            </div>

            <div class="input-box">
                <input @bind="newCustomer.Username" type="text" class="input-field" placeholder="Username" autocomplete="off" required />
            </div>

            <div class="input-box">
                <input @bind="newCustomer.Passsword" type="password" class="input-field" placeholder="Password" autocomplete="off" required />
            </div>

            <input class="submit-btn" @onclick="@RegisterCustomer" type="submit" value="Sign Up" />
        </div>
    </div>

</div>


@code {
    private Customer newCustomer = new Customer();

    private async Task RegisterCustomer()
    {
        await CustomerService.AddCustomerAsync(newCustomer);
    }
}